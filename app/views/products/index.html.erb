<h1>All Products</h1>

<ul>
  <% if cart.size > 0 %>
    <%= cart.each do |item| %>
      <li><%= item %></li>
    <% end %>
  <% end %>
</ul>

<h1>Add a product!</h1>

<%= form_tag '/', method:'post' do %>
  <%= label_tag :product %>
  <%= text_field_tag :product %>
  <%= submit_tag "add to cart" %>
<% end %>
